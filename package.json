{
  "name": "traphouse_discordbot",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "watch": "nodemon --watch . --ext js,json --ignore node_modules/ --ignore .git/ --delay 2 index.js",
    "auto-restart": "nodemon --watch . --ext js,json --ignore node_modules/ --ignore .git/ --ignore test-*.js --delay 2 --exec 'echo \"ðŸ”„ Restarting bot due to file changes...\" && node index.js'",
    "forever": "forever start -l forever.log -o out.log -e err.log --minUptime 1000 --spin 5 index.js",
    "forever-stop": "forever stop index.js",
    "pm2": "pm2 start ecosystem.config.js",
    "pm2-stop": "pm2 stop traphouse-bot",
    "pm2-restart": "pm2 restart traphouse-bot",
    "pm2-logs": "pm2 logs traphouse-bot",
    "docker:build": "docker build -t traphouse-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "test": "bash test-payments.sh",
    "deploy": "bash deploy.sh"
  },
  "keywords": [
    "discord",
    "bot",
    "lending",
    "tipcc",
    "stripe",
    "payments"
  ],
  "author": "TrapHouse Development",
  "license": "MIT",
  "type": "commonjs",
  "description": "TrapHouse Discord Bot with integrated payment processing via tip.cc and Stripe - Unicode Resistant",
  "dependencies": {
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.2",
    "axios": "^1.11.0",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "discord.js": "^14.21.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "iconv-lite": "^0.6.3",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^14.25.0",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "forever": "^4.0.3",
    "pm2": "^5.3.0"
  }
}
